{
  "kind": "collectionType",
  "collectionName": "packages",
  "info": {
    "name": "Package"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "price": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "courses": {
      "collection": "course"
    }
  }
}
